@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<br />
<table class="table table-responsive">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th class="btn-dark">@item.MessageID</th>
            <th>@item.Subject</th>

            <!-- Eğer SenderUser null ise "Bilinmeyen Kullanıcı" yazsın -->
            <th>@(item.SenderUser != null ? item.SenderUser.WriterName : "Bilinmeyen Kullanıcı")</th>

            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>
        </tr>
    }
</table>
<a href="/Message/SendMessage" class="btn btn-danger">Yeni Mesaj Oluştur</a>
<a href="/Message/SendBox" class="btn btn-danger">Gönderilen Mesajlar</a>
