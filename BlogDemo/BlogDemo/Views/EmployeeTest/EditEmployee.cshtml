@model BlogDemo.Controllers.EmployeeTest.Class1

@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>API ile Çalışan Güncelleme</h1>
<form method="post">
    <label>ID</label>
    @Html.TextBoxFor(x=>x.ID, new {@class= "form-control"})
    <br />
    <label>Çalışan</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

