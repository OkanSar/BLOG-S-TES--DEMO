@using static BlogDemo.Controllers.EmployeeTest
@model List<Class1>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <th>@item.Name</th>
            <td>
                <form method="post" action="/EmployeeTest/DeleteEmployee/@item.ID" onsubmit="return confirm('Silmek istediğinizden emin misiniz?');">
                    <button id="deleteButton" type="submit" class="btn btn-outline-danger">Sil</button>
                </form>
            </td>
            <td><a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/EmployeeTest/AddEmployee/" class="btn btn-outline-primary">Yeni Çalışan Girişi</a>


